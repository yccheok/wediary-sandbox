<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/bottom_sheet_layout_2"

    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"

    android:background="@drawable/bottom_sheet_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bottom_sheet_heading"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Add photo"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 2"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 3"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 4"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 7"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 8"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 9"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 10"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_baseline_android_24"
                android:gravity="start|center_vertical"
                android:text="Camera 11"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>